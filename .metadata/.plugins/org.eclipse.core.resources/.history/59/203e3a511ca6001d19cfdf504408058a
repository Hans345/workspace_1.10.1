#include "cpp_main.h"
#include "main.h"		//For. HAL-Functions
#include <iostream>		//For std::cout
#include "stm32f7xx_hal_gpio.h"

#define ASCII_TAB 	(0x09)
#define ASCII_LF 	(0x0A)
#define ASCII_CR	(0x0D)

void cpp_main(){
	while (1)
		{
			std::cout<<"---------------------------------------------------"<< (char) ASCII_LF<<(char) ASCII_CR;
			std::cout<<"Counting from 0 to 255: "<< (char) ASCII_LF<<(char) ASCII_CR;

			for(auto counter=0;counter<256;counter++){
				std::cout<<"counter value:"<< counter << (char) ASCII_LF<<(char) ASCII_CR;
				fflush(stdout);
				HAL_Delay(50);
				}
			}
			HAL_Delay(100);
		}
}


