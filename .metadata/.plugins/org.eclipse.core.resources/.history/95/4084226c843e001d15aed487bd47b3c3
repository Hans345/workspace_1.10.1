#ifndef SRC_BLINKINGLED_H_
#define SRC_BLINKINGLED_H_

class BlinkingLed {
private:
	float_t Frequency = 50;
	uint8_t DutyCycle = 0.5;
public:
	BlinkingLed();
	virtual ~BlinkingLed();

	void setDutyCycle(uint8_t dutyCycle) {
		DutyCycle = dutyCycle;
	}

	void setFrequency(float_t frequency) {
		Frequency = frequency;
	}
};

#endif /* SRC_BLINKINGLED_H_ */
